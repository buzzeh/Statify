<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.VisualizerFragment"
        android:id="@+id/constraintLayout">

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:background="@color/colorAccent"
            app:itemIconTint="@color/whiteColor"
            app:itemTextColor="@color/whiteColor"
            app:menu="@menu/menu"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Connor is working here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="132dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/rythm_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="132dp" android:layout_marginStart="6dp"
            app:layout_constraintHorizontal_bias="0.466"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/progressBar2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="228dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/progressBar3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" android:layout_marginTop="132dp"
            app:layout_constraintTop_toBottomOf="@+id/rythm_bar"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/progressBar4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" android:layout_marginTop="228dp"
            app:layout_constraintTop_toBottomOf="@+id/rythm_bar"/>
    <TextView
            android:text="Rythm:"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textSize="20dp"
            android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="132dp"/>
    <TextView
            android:text="Beat:"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textSize="20dp"
            android:id="@+id/textView5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="216dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="132dp"/>
    <TextView
            android:text="Tempo:"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView6" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/progressBar3" app:layout_constraintHorizontal_bias="0.384"/>
    <TextView
            android:text="Dance:"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView7" android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toBottomOf="@+id/progressBar4" app:layout_constraintHorizontal_bias="0.377"/>
    <Button
            android:text="Show Stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/show_stats" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="500dp"
            android:layout_marginStart="150dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/textView10"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="212dp"/>
    <TextView
            android:text="41"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="216dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="212dp"/>
    <TextView
            android:text="86"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="313dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="212dp"/>
    <TextView
            android:text="17"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="405dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="212dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>